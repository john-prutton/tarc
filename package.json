{
  "name": "tarc",
  "private": true,
  "scripts": {
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "watch-ts-check": "tsc --noEmit --watch",
    "build": "turbo build",
    "dev": "dotenv -e .env.development.local \"pnpm db-push && pnpm web-app-dev\"",
    "web-app-dev": "pnpm --filter @repo/web-app dev",
    "test": "pnpm test-domain && pnpm test-db",
    "test-domain": "dotenv -e .env.test.local pnpm domain-test",
    "watch-test-domain": "dotenv -e .env.test.local pnpm watch-domain-test",
    "test-db": "dotenv -e .env.test.local \"pnpm db-push && pnpm db-test\"",
    "watch-test-db": "dotenv -e .env.test.local \"pnpm db-push && pnpm watch-db-test\"",
    "domain-test": "pnpm --filter @repo/domain test",
    "watch-domain-test": "pnpm --filter @repo/domain test -- --watch",
    "db-push": "pnpm --filter @repo/drizzle-database push",
    "db-studio": "pnpm --filter @repo/drizzle-database studio",
    "db-test": "pnpm --filter @repo/drizzle-database test",
    "watch-db-test": "pnpm --filter @repo/drizzle-database test -- --watch"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/ts-config": "workspace:*",
    "turbo": "latest",
    "typescript": "^5.3.3",
    "jest": "latest",
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.1.2",
    "ts-node": "latest",
    "dotenv-cli": "^7.3.0"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=20"
  }
}
